modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"
packages = ["cacert"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ACCESS-WEB-V9.7 Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "ACCESS-WEB-V9.7 Frontend and API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "API Server"

[[workflows.workflow]]
name = "ACCESS-WEB-V9.7 Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ACCESS-WEB-V9.7 && npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Strapi CMS"
author = 40264017
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ACCESS-WEB-V9.7/strapi && npm run develop"

[[workflows.workflow]]
name = "ACCESS-WEB-V9.7 Frontend and API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ACCESS-WEB-V9.7 && npm run dev:all"
waitForPort = 5000

[[workflows.workflow]]
name = "API Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ACCESS-WEB-V9.7 && node src/server/server.js"

[[workflows.workflow]]
name = "Production Build and Start"
author = 40264017
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd ACCESS-WEB-V9.7 && npm run build && npm run api"

[deployment]
run = ["sh", "-c", "cd ACCESS-WEB-V9.7 && npm run dev"]
build = ["sh", "-c", "cd ACCESS-WEB-V9.7 && npm run build"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 5002
externalPort = 3002

[[ports]]
localPort = 5003
externalPort = 3003
