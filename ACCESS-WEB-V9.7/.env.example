# ACCESS-WEB-V9.7 Environment Variables Example
# Copy this file to .env and fill in appropriate values

# Application Environment
NODE_ENV=development  # development, production, or test

# Authentication 
VITE_JWT_SECRET=your_secure_jwt_secret_here_min_32_chars
VITE_JWT_EXPIRY=3600  # 1 hour in seconds
VITE_REFRESH_TOKEN_EXPIRY=604800  # 7 days in seconds

# API Configuration
VITE_API_TIMEOUT=30000  # 30 seconds
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_VERSION=v1

# Development Flags
VITE_DEVELOPMENT_MODE=true  # Set to false in production
VITE_ENABLE_MOCK_API=false  # Whether to use mock API responses

# Third-party Integration Keys 
# (Add your actual keys in .env, not in this example file)
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
VITE_ACCESSIBILITY_API_KEY=your_accessibility_api_key

# CSP Configuration
# Additional domains to whitelist for specific CSP directives
VITE_CSP_CONNECT_SRC_WHITELIST=api.accessibility-checker.org
VITE_CSP_FRAME_SRC_WHITELIST=js.stripe.com
VITE_CSP_SCRIPT_SRC_WHITELIST=js.stripe.com

# Feature Flags
VITE_FEATURE_FLAG_SHOPIFY_INTEGRATION=true
VITE_FEATURE_FLAG_WORDPRESS_INTEGRATION=true
VITE_FEATURE_FLAG_ADVANCED_REPORTING=true

# Strapi CMS Configuration
STRAPI_URL=http://0.0.0.0:1337
CMS_PROVIDER=strapi # Options: in-memory, strapi

# Warning: Never commit your actual .env file to version control
# This .env.example file is safe to commit as it contains no actual secrets