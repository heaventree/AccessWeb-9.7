{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Create and manage flexible pages with dynamic sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.hero-section",
        "sections.feature-section",
        "blocks.content-block"
      ]
    },
    "seo": {
      "type": "component",
      "repeatable": false,
      "component": "shared.seo"
    },
    "showInNavigation": {
      "type": "boolean",
      "default": false,
      "description": "Whether to show this page in the main navigation"
    },
    "parentPage": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::page.page",
      "inversedBy": "childPages"
    },
    "childPages": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::page.page",
      "mappedBy": "parentPage"
    },
    "navigationOrder": {
      "type": "integer",
      "default": 0,
      "description": "Order in which to display in navigation (lower numbers first)"
    },
    "layout": {
      "type": "enumeration",
      "enum": [
        "default",
        "full-width",
        "sidebar"
      ],
      "default": "default",
      "description": "Page layout template to use"
    }
  }
}